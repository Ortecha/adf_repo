{
	"name": "Copy Dataverse data from Azure Data Lake to Azure SQL",
	"properties": {
		"description": "After using Azure Synapse Link for Dataverse, use this template to copy the Dataverse data from Azure Data Lake to Azure SQL.",
		"activities": [
			{
				"name": "Dataverse mapping to Azure SQL",
				"type": "ExecuteDataFlow",
				"dependsOn": [],
				"policy": {
					"timeout": "1.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "DataverseToAzureSQL",
						"type": "DataFlowReference",
						"parameters": {
							"ContainerName": "\"Dataverse Container Name\"",
							"TableName": "\"Dataverse Table Name\""
						}
					},
					"staging": {
						"linkedService": {
							"referenceName": "prod-synapse-uks-001-WorkspaceDefaultStorage",
							"type": "LinkedServiceReference"
						},
						"folderPath": "users"
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					},
					"traceLevel": "Fine"
				}
			}
		],
		"annotations": [],
		"lastPublishTime": "2022-06-21T13:45:12Z"
	},
	"type": "Microsoft.Synapse/workspaces/pipelines"
}